generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider ="mysql"
  url = env("DATABASE_URL")
}


model user {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  cartlines     cartlines[]
  userRatings   userRatings[]
}

model posters {
  id          Int             @id @default(autoincrement())
  name        String
  slug        String           @unique
  description String? @db.Text
  image       String
  width       Int
  height      Int
  price       Float
  stock       Int
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  genres         genrePosterRel[]
  userRatings    userRatings[]
  cartlines      cartlines[]
}

model genres {
  id        Int             @id @default(autoincrement())
  title     String
  slug      String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  posters genrePosterRel[]
}

model genrePosterRel {
  genreId  Int
  posterId Int

  genres  genres  @relation(fields: [genreId], references: [id])
  posters posters @relation(fields: [posterId], references: [id])

  @@id([genreId, posterId])
}

model cartlines {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  quantity  Int
  createdAt DateTime @default(now())

  user   user   @relation(fields: [userId], references: [id])
  poster posters @relation(fields: [posterId], references: [id])
}

model userRatings {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  numStars  Int
  createdAt DateTime @default(now())

  user   user   @relation(fields: [userId], references: [id])
  poster posters @relation(fields: [posterId], references: [id])
}

enum Role {
  ADMIN
  USER
}




